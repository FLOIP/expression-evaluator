{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "module": "CommonJS",
    "lib": [
      "ESNext",
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "isolatedModules": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts/"
  ],
  "exclude": [
    "node_modules",
    "tests/**",
    "dist",
    "demo/**"
  ]
}
